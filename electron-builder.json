{
  "asar": true,
  "productName": "MCD Save Editor",
  "appId": "lepers.matthieu.mcd-save-editor",
  "directories": {
    "output": "build/${version}"
  },
  "publish": [
    {
      "provider": "github",
      "private": true,
      "owner": "MatthieuLepers",
      "repo": "mcd-save-editor"
    }
  ],
  "files": [
    "dist/electron/**/*"
  ],
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "build/icons/icon.icns"
  },
  "win": {
    "icon": "build/icons/icon.ico"
  },
  "linux": {
    "icon": "build/icons"
  }
}