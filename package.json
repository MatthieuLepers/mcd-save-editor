{
  "name": "mcd-save-editor",
  "version": "1.6.1",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "Matthieu LEPERS",
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue ./src",
    "lint:fix": "eslint -c .eslintrc.js --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix ./src",
    "test:unit": "jest --passWithNoTests",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-vite preview",
    "dev": "cross-env NODE_ENV=development electron-vite dev",
    "dev:web": "cross-env NODE_ENV=development vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:web": "npm run typecheck:web && vite build",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "ajv": "^6.12.6",
    "axios": "^1.6.2",
    "codemirror": "^6.0.1",
    "electron-updater": "^6.3.9",
    "lodash.get": "^4.4.2",
    "reflect-metadata": "^0.1.14",
    "sequelize": "^6.35.2",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "5.1.6",
    "vue": "^3.4.38",
    "vue-codemirror": "^6.1.1",
    "vue-draggable-next": "^2.2.1",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rushstack/eslint-patch": "^1.6.1",
    "@swc/core": "^1.3.101",
    "@types/jest": "^29.5.13",
    "@types/lodash.get": "^4.4.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "cross-env": "^7.0.3",
    "electron": "^27.2.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^1.0.29",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.19.2",
    "jest": "^29.7.0",
    "sass": "^1.69.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.1",
    "vue-tsc": "^2.0.29"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  }
}
